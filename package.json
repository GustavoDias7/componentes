{
  "devDependencies": {
    "concurrently": "^8.0.1",
    "nodemon": "^2.0.20",
    "sass": "^1.57.1",
    "tailwindcss": "^3.2.6",
    "typescript": "^4.9.4"
  },
  "scripts": {
    "watch": "tsc -w",
    "compile:tailwind": "npx tailwindcss -i ./src/styles/tailwind.css -o ./docs/styles/tailwind.css --watch",
    "compile:scss": "sass -w --no-source-map ./src/modal/styles/:./docs/modal/styles/ ./src/scroll-animation/styles/:./docs/scroll-animation/styles/ ./src/tooltips/:./docs/tooltips/ ./docs/form:./docs/form ./docs/accordion:./docs/accordion ./src/steps:./docs/steps",
    "compile:styles": "concurrently \"yarn run compile:tailwind\" \"yarn run compile:scss\""
  },
  "dependencies": {
    "node-sass": "^8.0.0"
  }
}
